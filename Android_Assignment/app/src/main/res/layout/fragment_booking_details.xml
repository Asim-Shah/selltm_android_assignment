<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/button_book">
    
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    
            <include layout="@layout/booking_details_selected_car_card" />
    
            <include layout="@layout/booking_details_hardcoded_cards" />

            <include layout="@layout/traveller_details_layout" />

        </LinearLayout>
    </ScrollView>
    
    <Button
        android:id="@+id/button_book"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/string_book"
        android:textSize="@dimen/font_22_sp"
        android:background="@color/color_sky_blue"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>